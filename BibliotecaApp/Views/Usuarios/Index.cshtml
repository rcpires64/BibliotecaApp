@model IEnumerable<BibliotecaApp.Models.Usuario>

@{
    ViewData["Title"] = "BibliotecaApp - Usuários";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Biblioteca Senac Rio - Usuários</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Usuário</a>
</p>

<table class="table table-striped table-bordered">
    <tr class="bg-secondary">
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
    </tr>

    @foreach (var usuario in Model)
    {
        <tr>
            <td>@usuario.Nome</td>
            <td>@usuario.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-primary">Editar</a> |
                <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-primary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger">Apagar</a>
            </td>
        </tr>
    }
</table>
