@model BibliotecaApp.Models.Usuario

@{
    ViewData["Title"] = "BibliotecaApp - Usuário Apagar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Biblioteca Senac Rio - Usuário - Apagar</h1>
<hr />

<div class="col-md-6">
    <table class="table table-light table-bordered">
        <input type="hidden" asp-for="Id" />
        <tr>
            <td class="col-md-2">Nome:</td>
            <td>
                <div class="form-group">
                    @Html.DisplayFor(model => model.Nome)
                </div>
            </td>
        </tr>
        <tr>
            <td class="col-md-2">E-mail:</td>
            <td>
                <div class="form-group">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </td>
        </tr>
        <tr>
            <td class="col-md-2">Senha:</td>
            <td>
                <div class="form-group">
                    @Html.DisplayFor(model => model.Senha)
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <h5> Tem certeza deseja apagar esse usuário?</h5>
                <form id="Delete" asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Apagar" class="btn btn-danger" />
                    
                </form>
            </td>
        </tr>

    </table>
</div>
<hr />
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}